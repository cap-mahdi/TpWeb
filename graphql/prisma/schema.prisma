generator client {
  provider = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  name        String
  email       String   @unique
  role        UserRole @default(USER)
  cvs         Cv[]
}

model Skill{
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  designation String
  cvs         Cv[]
}

model Cv {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  name        String
  age         Int
  job         String
  user        User    @relation(fields: [userId], references: [id])
  userId      Int 
  skills      Skill[]
}

enum UserRole{
  ADMIN
  USER
}